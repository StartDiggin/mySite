@import 'variables.styl';


body 
    background-image: url("../img/lights.jpg");

#header 
    display grid
    grid-template-columns: 2fr 2fr
    // border: 1px #000 solid 
    background-color: headerColor
    nav 
        display flex
        justify-content: center
        align-items: center

    a 
        text-decoration: none
        width 85px
        height 35px
        color #fff
        text-align: center
        border 2px groove #9a9a9a
        transition: all 0.5s;

nav a:hover
    background-color: rgba(0, 0, 0, 0.4);
    border-color #fff
    font-size: 1.1em
    text-shadow: 0px 3px 2px #fcba68



#company 
    display flex 
    justify-content: center
        
// Dropdown menu
#menu
    display none

    @media screen and (max-width: 500px)
        display block
        width 75px
        height 35px
        background-color: rgba(0, 0, 0, 0.4);
        color #fff

      
@media screen and (max-width: 500px)
    #links
        display none
    #alinks 
        list-style-type none
        button  
            background-color: rgba(0, 0, 0, 0.4);
        a  
            color #fff

#consult 
    width 125px
    height 37px
    margin: 0px 5px;
    background-color: rgba(0, 0, 0, 0.4);
#btnLink 
    border none !important

// Home Component
#home 
    background-image: url('../img/oregon.jpeg')
    height: 500px;
    text-align: center;
    // display flex
    // justify-content: center
    h1 
        margin auto
        color white
        font-family: sansFont;
    h2 
        font-family: dancFont;
        color white
        font-size: 48px
        text-shadow: 4px 4px 4px #aaa
.overlay
    height 200px
    width 100% 
    background-color rgba(0,0,0, 0.7)
    
    
  
